<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:layout_marginTop="0dp"
    android:layout_marginEnd="0dp"
    android:layout_marginRight="0dp"
    app:cardBackgroundColor="#3F51B5"
    app:cardCornerRadius="2dp"
    app:contentPaddingBottom="2dp"
    app:contentPaddingLeft="2dp"
    app:contentPaddingRight="2dp"
    app:contentPaddingTop="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/game_release_date_textview"
            android:layout_width="183dp"
            android:layout_height="73dp"
            android:background="#7FB6E1"
            android:gravity="center"
            android:text="Release Date"
            app:layout_constraintBottom_toTopOf="@+id/game_platform_textview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/game_rating_textview"
            app:layout_constraintTop_toBottomOf="@+id/item_title_textview" />

        <TextView
            android:id="@+id/item_title_textview"
            android:layout_width="183dp"
            android:layout_height="102dp"
            android:background="#B2EEF6"
            android:gravity="center"
            android:text="Title"
            app:layout_constraintBottom_toTopOf="@+id/game_release_date_textview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/game_rating_textview"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/game_rating_textview"
            android:layout_width="63dp"
            android:layout_height="248dp"
            android:background="#BA7CC5"
            android:gravity="center"
            android:text="Rating"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/game_release_date_textview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/game_platform_textview"
            android:layout_width="183dp"
            android:layout_height="73dp"
            android:background="#B2EEF6"
            android:gravity="center"
            android:text="Platform"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/game_rating_textview"
            app:layout_constraintTop_toBottomOf="@+id/game_release_date_textview" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>