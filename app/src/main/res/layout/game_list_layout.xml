<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="250dp"
    android:layout_marginLeft="0dp"
    android:layout_marginTop="0dp"
    android:layout_marginEnd="0dp"
    android:layout_marginRight="0dp"
    app:cardBackgroundColor="#B2EEF6"
    app:cardCornerRadius="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="250dp"
        android:layout_height="250dp">

        <TextView
            android:id="@+id/release_date"
            android:layout_width="185dp"
            android:layout_height="75dp"
            android:background="#B2EEF6"
            android:gravity="center"
            android:text="Release Date"
            app:layout_constraintBottom_toTopOf="@+id/game_platform_textview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/game_rating_textview"
            app:layout_constraintTop_toBottomOf="@+id/game_title_textview" />

        <TextView
            android:id="@+id/game_title_textview"
            android:layout_width="185dp"
            android:layout_height="100dp"
            android:background="#B2EEF6"
            android:gravity="center"
            android:text="Title"
            app:layout_constraintBottom_toTopOf="@+id/release_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/game_rating_textview"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/game_rating_textview"
            android:layout_width="65dp"
            android:layout_height="250dp"
            android:background="#BA7CC5"
            android:gravity="center"
            android:text="Rating"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/release_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/game_platform_textview"
            android:layout_width="185dp"
            android:layout_height="75dp"
            android:background="#B2EEF6"
            android:gravity="center"
            android:text="Platform"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/game_rating_textview"
            app:layout_constraintTop_toBottomOf="@+id/release_date" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>